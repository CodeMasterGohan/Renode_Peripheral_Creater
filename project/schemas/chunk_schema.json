{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Markdown Chunk Schema",
  "description": "Schema for validating Markdown chunks generated by the processor",
  "type": "object",
  "properties": {
    "chunk_id": {
      "type": "string",
      "description": "Unique identifier for the chunk"
    },
    "source_file": {
      "type": "string",
      "description": "Path to the source Markdown file"
    },
    "chapter_title": {
      "type": "string",
      "description": "Title of the chapter"
    },
    "heading_hierarchy": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Hierarchy of headings leading to this chunk"
    },
    "chunk_type": {
      "type": "string",
      "enum": ["text", "table", "list", "register_diagram"],
      "description": "Type of content in the chunk"
    },
    "peripheral_name": {
      "type": "string",
      "description": "Name of the peripheral device"
    },
    "section_type": {
      "type": "string",
      "enum": ["memory_map", "registers", "functional_description", "interrupts", "timing", "examples", "other"],
      "description": "Type of section content"
    },
    "content": {
      "type": "string",
      "description": "The actual content of the chunk"
    }
  },
  "required": [
    "chunk_id",
    "source_file",
    "chapter_title",
    "heading_hierarchy",
    "chunk_type",
    "peripheral_name",
    "section_type",
    "content"
  ],
  "additionalProperties": false
}